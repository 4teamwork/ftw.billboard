<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.billboard">

<body>
    <metal:content-core fill-slot="content-core">
        <metal:content-core define-macro="content-core">
            <div class="billboardCategoryListing"
                 tal:define="plone here/@@plone;
                             toLocalizedTime nocall:plone/toLocalizedTime">
                <table class="linkListing vertical">
                    <tal:categories tal:repeat="category python:context.getFolderContents({'portal_type':'BillboardCategory'})">
                        <tr tal:define="oddrow repeat/category/odd"
                            tal:attributes="class python:oddrow and 'even' or 'odd'">
                            <td>
                                <a tal:attributes="href category/getURL"
                                   tal:content="category/Title"
                                   />
                                (<span tal:content="python:len(category.getObject().getFolderContents())" />)
                            </td>
                        </tr>
                    </tal:categories>
                </table>
            </div>
        </metal:content-core>
    </metal:content-core>
</body>
</html>
