<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ftw.billboard">

<body>

<div metal:fill-slot="main"
     class="billboardAdsListing"
     tal:define="ads view/get_ads;
                 toLocalizedTime nocall:context/@@plone/toLocalizedTime">
        <metal:main-macro define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 tal:content="here/Title" class="documentFirstHeading" />
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />
        <tal:elements condition="ads">
            <table class="listing">
                <tr tal:repeat="ad ads">
                    <td tal:content="python:toLocalizedTime(ad.created)" />
                    <td>
                        <a tal:attributes="href ad/getPath"
                           tal:content="ad/Title"
                           />
                    </td>
                </tr>
            </table>
        </tal:elements>
        <span tal:condition="not: ads"
              i18n:translate="">
            no ads
        </span>
    </metal:main-macro>
</div>
</body>
</html>
