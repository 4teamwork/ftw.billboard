<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.billboard">

<body>

    <metal:content-title fill-slot="content-title">
        <metal:title define-macro="content-title">
            <h1 class="documentFirstHeading" i18n:translate="">
                Add Picture
            </h1>
        </metal:title>
    </metal:content-title>

    <metal:content-description fill-slot="content-description">
        <metal:description define-macro="content-description">
            <!-- no desc -->
        </metal:description>
    </metal:content-description>

    <metal:content-core fill-slot="content-core">
        <metal:content-core define-macro="content-core">
            <form action="add_image" method="post" enctype="multipart/form-data">
                <br />
                <input type="file" name="img" />
                <input type="hidden" name="form.submitted" value="1" />
                <br /><br />
                <input type="submit" i18n:attributes="value label_upload" />
            </form>
        </metal:content-core>
    </metal:content-core>
</body>
</html>
